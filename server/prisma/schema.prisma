datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

generator express {
  provider = "node ./prisma/generator/dist/generator.js"
  output   = "../src/generated/express"
}

